<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/fondo">
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

	<ImageView
	    android:id="@+id/imageView11"
	    android:layout_width="match_parent"
	    android:layout_height="74dp"
	    android:src="@drawable/titulo" 
	    />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingBottom="10dp"
	    android:paddingLeft="40dp"
	    android:paddingRight="40dp"
	    android:paddingTop="10dp"
	    android:weightSum="200"
	    
	    >
	    
	    <Button
	        android:id="@+id/iB1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="80"
	        android:layout_gravity="center"
	        android:background="@drawable/evacuacionmenu2"
	        />
	    
	    <Button
	        android:id="@+id/iB2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="80"
	          
	        android:background="@drawable/llamadasmenu1"
	        />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    android:paddingBottom="10dp"
	    android:paddingLeft="40dp"
	    android:paddingRight="40dp"
	    android:paddingTop="10dp" 
	    android:weightSum="120">
		
		<Button
	        android:id="@+id/iB3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="40"
	        android:background="@drawable/guia"
	        />
		
		<ImageButton
	        android:id="@+id/iBseparador2"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:background="#000000"
	        android:layout_weight="40"/>

		<Button
	        android:id="@+id/iB4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_weight="40"  
	        android:background="@drawable/recomendaciones"
	        />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
		android:orientation="vertical">

		<Button
	        android:id="@+id/iB6"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:background="@drawable/ic_menu_exit"
	        
	        
	        />

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Salir"
		    android:textSize="18dp"
		    android:paddingLeft="30dp"
		    android:gravity="center"
		    android:textColor="#FFFFDD" 
		    />

	</LinearLayout>
        
    </LinearLayout>
    

</ScrollView>